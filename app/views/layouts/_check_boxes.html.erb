<% count = 0 %>
<% fields_for target do |f| %>
<div>
  <table style="width:auto;margin-bottom: 5px;">
    <% for value in values %>
      <% checked = '' %>
      <% checked = 'checked' if !params[target].blank? && params[target][name][value.id.to_s] == '1'%>
      <%= '<tr>' if count%cols == 0 %>
      <td style="border:none">
        <%= f.check_box(name,:name=> target.to_s+'['+name+']['+value.id.to_s+']',:checked=>checked) %>
      </td>
      <td style="border:none"><%= value[label] %>&nbsp;&nbsp;</TD>
      <% count = count+1 %>
    <%= '</tr>'  if count%cols == 0 %>
    <% end %>
    </tr>
  </table>
</div>
<% end %>
